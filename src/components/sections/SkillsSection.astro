---
interface SkillItem {
  icon: string; // inline SVG
  title: string;
  description: string;
  href: string;
}

interface Props {
  title?: string;
  skills: SkillItem[];
}

const { title, skills } = Astro.props as Props;
---

<section class="w-full py-6">
  <div class="mx-auto max-w-6xl px-4">
    {title && (
      <h2 class="text-2xl md:text-3xl font-semibold text-center mb-5 text-foreground">{title}</h2>
    )}
  
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto">
      {skills.map((skill) => (
        <a href={skill.href} class="card-surface p-6 group transition-all duration-300 hover:-translate-y-2">
          <div class="flex flex-col items-center text-center">
            <div class="mb-4 rounded-lg size-[56px] flex items-center justify-center text-[var(--accent)] opacity-100 transition-all duration-300 will-change-transform group-hover:scale-115 [&>svg]:w-8 [&>svg]:h-8" style="background: rgba(var(--accent-rgb),0.15);" set:html={skill.icon} />
            <h3 class="text-xl font-bold text-[var(--accent)] mb-2">{skill.title}</h3>
            <p class="text-sm text-[color:var(--color-text-secondary)] leading-relaxed max-w-prose">{skill.description}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>


