---
import Button from "../ui/button/Button.astro";
interface Cta {
  text: string;
  href: string;
}

interface Props {
  title: string;
  subtitle?: string;
  showCTA?: boolean;
  primaryCTA?: Cta;
  secondaryCTA?: Cta;
}

const {
  title,
  subtitle,
  showCTA = false,
  primaryCTA,
  secondaryCTA
} = Astro.props as Props;
---

<section class="w-full py-4 md:py-8">
  <div class="mx-auto max-w-5xl px-4 text-center">
    <h1 class="text-3xl md:text-5xl font-extrabold tracking-tight text-foreground">
      <span class="bg-gradient-to-r from-[var(--accent)] to-[var(--accent-dark)] bg-clip-text text-transparent">{title}</span>
    </h1>
    {subtitle && (
      <p class="mt-3 text-base md:text-lg text-[color:var(--color-text-secondary)] max-w-2xl mx-auto leading-relaxed">
        {subtitle}
      </p>
    )}
    {showCTA && (primaryCTA || secondaryCTA) && (
      <div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-3">
        {primaryCTA && (
          <Button href={primaryCTA.href} variant="primary" size="md">{primaryCTA.text}</Button>
        )}
        {secondaryCTA && (
          <Button href={secondaryCTA.href} variant="secondary" size="md">{secondaryCTA.text}</Button>
        )}
      </div>
    )}
  </div>
  
</section>


